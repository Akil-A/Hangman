<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/hangman_background"
                tools:context="com.example.android.s181142.RulesActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_rules_headline"
                android:textColor="#ffffff"
                android:textSize="35sp"
                android:id="@+id/activity_rules_headline"
                android:padding="10dp"/>


            <TextView
                android:text="@string/rules_text"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_rules_rules"
                android:layout_below="@id/activity_rules_headline"
                android:scrollbars="vertical"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
